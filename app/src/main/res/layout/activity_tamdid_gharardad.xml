<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pishkhanItemView.foroshNarmAfZar.ForooshNarmAfzarActivity">

    <include
        android:id="@+id/include6"
        layout="@layout/custom_toolbar_for_item_pishkhan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/loading_layout"
        android:id="@+id/loading_view"
        android:visibility="gone"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Mcv_darsadKharidMoshtari_select_productType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:backgroundTint="@color/yellow"
        android:clickable="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/include6"
        app:layout_constraintTop_toBottomOf="@+id/include6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/checkbox_pishkan_tamdidQarardad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="@string/moqayeseBa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinLayout_pishkhan_tamdidQarardad_moqayese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="?actionBarSize">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="از تاریخ :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TV_fromDate_moqayese"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:background="?viewGroupBackGroundColor"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_marginStart="2dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        android:text="1400/14/14" />
                    <View
                        android:id="@+id/guideline2"
                        android:layout_width="16dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تا تاریخ :"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/Tv_toDate_moqayese"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:background="?viewGroupBackGroundColor"
                        android:padding="4dp"
                        android:layout_marginStart="2dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/textView1"
                        app:layout_constraintStart_toEndOf="@+id/textView1"
                        app:layout_constraintTop_toTopOf="@+id/textView1"
                        android:text="1400/55/16" />




                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/frameLayout_pishkhan_tamdidQarardad_entekhab_Service">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"
                        android:text="@string/entekhabService"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/TV_pishkhan_tamdidQarardad_entekhabService"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="@string/serviceAbi"
                            android:layout_gravity="end"
                            android:textColor="@color/black"
                            android:layout_marginStart="16dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_arrow_drop"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>


        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Mbtn_pishkhan_tamdidQarardad_sendInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendInfo"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/Mcv_darsadKharidMoshtari_select_productType"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/Mcv_darsadKharidMoshtari_select_productType"
        app:layout_constraintTop_toBottomOf="@+id/Mcv_darsadKharidMoshtari_select_productType" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_pishkhan_tamdidQarardad_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mbtn_pishkhan_tamdidQarardad_sendInfo" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_pishkhan_tamdidQarardad_moqayese"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mbtn_pishkhan_tamdidQarardad_sendInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>