<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/item_materialCardView_khadamatDetail_root"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_namePoshtibani"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:text="@string/namePoshtiban"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>



                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_tedadTamas"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/tedadTamas"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_modatMokaleme"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/modatMokalem"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_mianginMokaleme"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/mianginMokaleme"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_tedadKhadamat"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:text="@string/tedadKhadamat"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_ntedadPaygiri"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/tedadPaygiri"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_mianginEmtiaz"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/mianginEmtiaz"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor"/>
                <TextView
                    android:id="@+id/TV_item_Khadamat_poshtibani_main_shomareDakheli"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/shomareDakheli"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"/>


            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?dividerColor"/>
    </LinearLayout>




</HorizontalScrollView>