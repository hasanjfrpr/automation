<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:paddingBottom="8dp"
    android:layout_marginVertical="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ticket_item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registrar"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_registrar_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="4dp"
                    android:text="حسن جعفرپور"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currentUser"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_currentuser_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="حسن جعفرپور"
                    android:layout_marginStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statusTicket"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_status_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="4dp"
                    android:text="حسن جعفرپور"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ticketType"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_ticketType_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="حسن جعفرپور"
                    android:layout_marginStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateTicket"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_date_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="4dp"
                    android:text="حسن جعفرپور"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/importance"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_importance_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="حسن جعفرپور"
                    android:layout_marginStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginHorizontal="100dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/TV_title_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/yellow"
            android:text="سلامتی هرچی حوون تئی این دنیا"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="16dp"
            android:minLines="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="@string/description"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:paddingHorizontal="4dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:id="@+id/IV_item_ticket_description_showMore"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/IV_item_ticket_description_showMoreImage"
                    android:layout_gravity="start|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:background="?selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_arrow_drop"
                    app:tint="@color/black" />
            </FrameLayout>



        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:visibility="gone"
            android:background="@color/white"
            android:animateLayoutChanges="true"
            android:id="@+id/frame_more_ticket_description"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TV_item_ticket_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:paddingVertical="8dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="26dp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </FrameLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>