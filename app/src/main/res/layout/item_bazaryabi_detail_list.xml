<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingHorizontal="16dp"
       android:layout_marginTop="8dp"
       android:weightSum="7.5">



       <TextView
           android:id="@+id/TV_item_bazaryabi_detail_serviceType"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:layout_weight="0.5"
           android:layout_marginBottom="8dp"
           android:textColor="@color/black"
           android:layout_gravity="center_horizontal"
           android:textStyle="bold"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="46dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/clientName"
               android:textSize="16sp"
               android:layout_marginEnd="16dp"
               android:textColor="@color/black"
               android:layout_gravity="center_vertical|start"/>


          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:id="@+id/TV_item_bazaryabi_detail_clientName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/black"
                  android:ellipsize="end"
                  android:textStyle="bold"
                  android:layout_gravity="center_vertical|end"
                  />
          </FrameLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="46dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/phoneNumber"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:layout_gravity="center_vertical|start"/>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:id="@+id/TV_item_bazaryabi_detail_phoneNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:layout_gravity="center_vertical|end"
                  />
          </FrameLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="46dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/productType"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:layout_gravity="center_vertical|start"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/TV_item_bazaryabi_detail_productType"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_gravity="center_vertical|end"
                   />
           </FrameLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="46dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/status"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:layout_gravity="center_vertical|start"/>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:id="@+id/TV_item_bazaryabi_detail_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:layout_gravity="center_vertical|end"
                  />
          </FrameLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="12dp"
           android:gravity="center_vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/description"
               android:textSize="16sp"
               android:paddingVertical="8dp"
               android:layout_marginEnd="16dp"
               android:textColor="@color/black"
               android:layout_gravity="center_vertical|start"/>
           <ImageView
               android:id="@+id/IV_item_bazaryabi_detail_showMore"
               android:layout_width="50dp"
               android:scaleType="centerInside"
               android:background="?selectableItemBackgroundBorderless"
               android:layout_height="match_parent"
               android:visibility="invisible"
               app:srcCompat="@drawable/ic_arrow_drop"
               app:tint="@color/black" />

       </LinearLayout>
       <TextView
           android:id="@+id/TV_item_bazaryabi_detail_description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:ellipsize="end"
           android:layout_marginTop="8dp"
           android:visibility="gone"
           android:textColor="@color/black"
           android:layout_marginBottom="8dp"
           android:paddingBottom="8dp"
           android:layout_marginHorizontal="16dp"
           android:textStyle="bold"
           android:layout_gravity="center_vertical|start" />

   </LinearLayout>


</com.google.android.material.card.MaterialCardView>