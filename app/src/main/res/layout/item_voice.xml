<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="@string/serial"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:paddingHorizontal="4dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TV_item_pishkhan_voice_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"/>
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="@string/shomaretamas"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:paddingHorizontal="4dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TV_item_pishkhan_voice_shomareTamas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"/>
            </FrameLayout>



        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:visibility="gone"
            android:background="@color/graylight"
            android:id="@+id/frame_moreContent_sefareshmoshtari_status"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/TV_item_pishkhan_sefareshMoshtariJadid_status2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingVertical="8dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="26dp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="@string/time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:paddingHorizontal="4dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TV_item_pishkhan_voice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"/>
            </FrameLayout>



        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="@string/mokaleme"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:paddingHorizontal="4dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingEnd="16dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/TV_item_pishkhan_voice_play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:paddingHorizontal="16dp"
                    app:srcCompat="@drawable/ic_play_voice"
                    android:layout_gravity="end" />
            </FrameLayout>



        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>