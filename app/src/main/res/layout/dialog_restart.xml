<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="4dp"
    android:background="@drawable/shape_item_main_list"
    android:backgroundTint="@color/whiteYellow"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/restartTitle"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/restartMessage"
            android:layout_marginTop="16dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="center"
           android:layout_height="wrap_content">
           <com.google.android.material.button.MaterialButton
               android:id="@+id/Mbtn_restart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/restart"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:cornerRadius="12dp"
               android:layout_marginHorizontal="12dp"
               android:layout_marginTop="16dp"
               android:layout_marginBottom="16dp"
               android:layout_gravity="center"/>
           <com.google.android.material.button.MaterialButton
               android:id="@+id/Mbtn_cancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/cancel"
               android:textStyle="bold"
               android:layout_marginHorizontal="12dp"
               android:textColor="@color/black"
               app:cornerRadius="12dp"
               android:layout_marginTop="16dp"
               android:layout_marginBottom="16dp"
               android:layout_gravity="center"/>
       </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>