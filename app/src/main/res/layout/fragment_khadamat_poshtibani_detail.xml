<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    tools:context=".view.pishkhanItemView.khadamatPoshtibani.fragments.KhadamatPoshtibaniDetailFragment"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar_detail_hokmKar"
        android:layout_width="match_parent"
        android:backgroundTint="@color/yellow"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/TV_showEndDate_khadamatPoshtibani_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?colorOnPrimary"
            android:layout_marginStart="36dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="1400/14/114"/>
        <TextView
            android:id="@+id/TV_showStartDate_khadamatPoshtibani_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?colorOnPrimary"
            android:layout_marginStart="16dp"
            android:layout_gravity="start|center_vertical"
            android:text="1400/14/114"/>
        <ImageView
            android:id="@+id/IV_back_detail_khadamatPoshtibani"
            android:layout_width="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:tint="?colorOnPrimary" />

    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:id="@+id/RV_pishkhan_khadamatPoshtibani_detail"
        android:clipToPadding="false"
        android:layout_height="match_parent"/>


</LinearLayout>



