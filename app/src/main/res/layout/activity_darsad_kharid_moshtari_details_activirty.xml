<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start"
    android:gravity="start"
    android:orientation="vertical">
    <include
        android:id="@+id/loading_viewss"
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_darsadKharidMoshtariDetail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/yellow">
        <ImageView
            android:id="@+id/ic_backs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_back"
            android:layout_gravity="end"
            android:paddingHorizontal="16dp"/>
    </androidx.appcompat.widget.Toolbar>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lightYellow"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:text="@string/shomareSefaresh"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?dividerColor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:text="@string/tarikhSefaresh"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?dividerColor" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:text="@string/daste"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?dividerColor" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:text="@string/model"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?dividerColor" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:text="@string/tedad"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_pishKhan_darsadKharidMoshtari_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    </LinearLayout>


</LinearLayout>