<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?viewGroupBackGroundColor"
    >


    <include
        android:id="@+id/loading_Lidha"
        layout="@layout/loading_layout"
        android:visibility="gone" />


    <include
        android:id="@+id/include"
        layout="@layout/custom_toolbar_for_item_pishkhan"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Mcv_Lidha_select_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        android:visibility="gone"
        android:backgroundTint="@color/yellow"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:paddingVertical="4dp"
            android:text="@string/entekhabPersonel"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TV_Lidha_select_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="40dp"
            android:paddingVertical="4dp"
            android:text="@string/all"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_arrow_drop"
            app:tint="?colorOnPrimary" />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Mbtn_pishkhan_Lidha_saveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ثبت و بررسی"
        app:cornerRadius="12dp"
        android:visibility="gone"
        android:textColor="?colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/Mcv_Lidha_select_company"
        app:layout_constraintStart_toStartOf="@+id/Mcv_Lidha_select_company"
        app:layout_constraintTop_toBottomOf="@+id/Mcv_Lidha_select_company" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/lightYellow"
                android:weightSum="17.25"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:layout_weight="1.75"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/nahveAshenaei"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/areFactor"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/present"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/darEntezarTaeedMoshtari"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/paygiryTelfoni"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/paygiryNashode"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/KharidAzsherkatDigar"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/demo"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/adamMojoodi"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/moshtariQayrMortabet"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/monjarBeforoosh"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:text="@string/monsarefAzKharid"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?dividerColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    android:background="@color/greenLighter"
                    android:text="@string/tedadKol"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />



            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_pishKhan_lid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>